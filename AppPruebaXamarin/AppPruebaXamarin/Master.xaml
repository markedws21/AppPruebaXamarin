<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPruebaXamarin.Master"
             Title="Master">
    <Grid>
        <Image Source="fondo.jpg" Aspect="AspectFill"/>
        <BoxView Color="LightBlue" Opacity="0.8" />
        <StackLayout>
            <Image Source="persona.png" HeightRequest="200" Margin="0,50,0,0"/>
            <Label Text="Bienvenido Usuario" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
            <Label Text="___________________________" FontSize="20" HorizontalOptions="Center" TextColor="Black"/>
            <Button Text="PUNTOS DE VENTA" TextColor="Black" FontAttributes="Bold" x:Name="btnPuntos" BackgroundColor="Transparent" Margin="0,60,0,0" Clicked="btnPuntos_Clicked"/>
            <Button Text="ACERCA DE" TextColor="Black" FontAttributes="Bold" x:Name="btnAcerca" BackgroundColor="Transparent" Margin="0,10,0,0" Clicked="btnAcerca_Clicked"/>
            <Button Text="CERRAR SESION" TextColor="Black" FontAttributes="Bold" x:Name="btnCerrar" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="5" CornerRadius="50" Margin="50,350,50,0" Clicked="btnCerrar_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>